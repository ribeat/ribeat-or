<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9sp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/category_image" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="@+id/category_image"
            app:layout_constraintEnd_toEndOf="@+id/category_image" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"/>
    <ImageView android:layout_width="match_parent"
               android:layout_height="0dp"
               app:layout_constraintDimensionRatio="1:1"
               android:id="@+id/category_image"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent" android:contentDescription="@string/category_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>