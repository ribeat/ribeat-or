<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9sp"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/category_image" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ImageView android:layout_width="wrap_content"
               android:maxWidth="192dp"
               android:layout_height="wrap_content"
               android:id="@+id/category_image" android:contentDescription="@string/category_image"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
               app:layout_constraintStart_toStartOf="parent" app:srcCompat="@drawable/ic_launcher_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>